{
    "name": "aws-iot-device-sdk-cpp-v2",
    "!cmake_args": [
        "-DBUILD_DEPS=ON",
        "-DPERFORM_HEADER_CHECK=OFF",
        "-DS2N_NO_PQ_ASM=ON"
    ],
    "targets": {
        "linux" : {
            "imports": [
                "s2n"
            ]
        }
    },
    "search_dirs": ["aws-common-runtime"],
    "hosts": {
        "manylinux": {
            "architectures": {
                "x86": {
                    "!yum_compiler_packages": []
                }
            }
        }
    },
    "test_steps": [
        "cmake -DCMAKE_INSTALL_PREFIX={install_dir} -DCMAKE_BUILD_TYPE=Release samples/stand-alone-samples/shadow/shadow_sync/ && cmake --build samples/stand-alone-samples/shadow/shadow_sync/ --config Release"
    ]
}
