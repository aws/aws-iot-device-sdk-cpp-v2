{
  "name": "aws-iot-device-sdk-cpp-v2",
  "!cmake_args": [
    "-DBUILD_DEPS=ON",
    "-DPERFORM_HEADER_CHECK=OFF",
    "-DS2N_NO_PQ_ASM=ON"
  ],
  "targets": {
    "linux": {
      "imports": ["s2n"]
    }
  },
  "search_dirs": ["crt"],
  "hosts": {
    "manylinux": {
      "architectures": {
        "x86": {
          "!yum_compiler_packages": []
        }
      }
    }
  },
  "test_steps": [
    [
      "cmake",
      "-DCMAKE_INSTALL_PREFIX={install_dir}",
      "-DCMAKE_PREFIX_PATH={install_dir}",
      "-DCMAKE_BUILD_TYPE=Release",
      "-DLibCrypto_INCLUDE_DIR=build/deps/libcrypto/include", 
      "-DLibCrypto_SHARED_LIBRARY=build/deps/libcrypto/lib/libcrypto.so", 
      "-DLibCrypto_STATIC_LIBRARY=build/deps/libcrypto/lib/libcrypto.a", 
      "-DLibCrypto_INCLUDE_DIR=build/deps/libcrypto/include", 
      "-DLibCrypto_SHARED_LIBRARY=build/deps/libcrypto/lib/libcrypto.so", 
      "-DLibCrypto_STATIC_LIBRARY=build/deps/libcrypto/lib/libcrypto.a",
      "samples/stand-alone-samples/shadow/shadow_sync/"
    ],
    ["cmake", "--build", ".", "--config", "Release"]
  ]
}
